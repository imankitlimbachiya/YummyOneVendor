<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:overScrollMode="never"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Controller.Activities.Welcome">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/logo"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:lineSpacingMultiplier="1.26"
                android:text="Vendor Details"
                android:textColor="#55565b"
                android:textSize="21dp"
                />

            <TextView
                android:id="@+id/comments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:layout_marginBottom="4dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:text="Comments : Account Under Review"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:padding="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/one"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Details"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>



                <ImageView
                    android:id="@+id/line1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/line"/>

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/two"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Details"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/line2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/line"/>

                <LinearLayout
                    android:id="@+id/l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/three"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Documents Upload"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:fontFamily="@font/roboto_regular"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/stage1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:background="#ffffff"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Full Name"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="textCapSentences"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Date of Birth"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/dob"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="DD/MM/YYYY"
                    android:paddingEnd="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Gender"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:paddingTop="15dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    >

                    <Spinner
                        android:id="@+id/gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/roboto_regular"
                        android:inputType="textCapSentences"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Email ID"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Alternate Mobile Number"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="32dp"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="4dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_weight="1.5">


                        <EditText
                            android:id="@+id/anumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@null"
                            android:fontFamily="@font/roboto_regular"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:layout_gravity="center"
                            />


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Address"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textPostalAddress"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Pincode"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/postcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textCapCharacters"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/previous0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:visibility="invisible"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="32dp"
                        android:textColor="#ec6333"
                        android:fontFamily="@font/roboto_regular"
                        android:text="PREVIOUS"/>

                    <Button
                        android:id="@+id/next"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:background="@drawable/border"
                        android:backgroundTint="@color/colorPrimary"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/stage2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:background="#ffffff"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Bank Account Name"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bankaccount"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/roboto_regular"
                    android:inputType="textCapSentences"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp"/>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Account Number"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textPassword"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Confirm Account Number"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bcnumber"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textCapCharacters"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="IFSC Code"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bsortcode"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textCapCharacters"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:background="#ffffff"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="Bank Name"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/bankname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="textCapCharacters"
                    android:paddingStart="10dp"
                    android:textColor="@color/black"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/previous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="32dp"
                        android:textColor="#ec6333"
                        android:fontFamily="@font/roboto_regular"
                        android:text="PREVIOUS"/>

                    <Button
                        android:id="@+id/next1"
                        android:layout_width="100dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:text="Next"
                        android:textColor="@color/white"
                        android:background="@drawable/border"
                        android:backgroundTint="@color/colorPrimary"/>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/stage3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginTop="24dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">



                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc1"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>



                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Personal Photo"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">


                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc2"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Pan Card"/>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">



                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc3"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>


                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Aadhaar Card"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">


                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc4"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>

                        </RelativeLayout>


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Bank Statement"/>


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">



                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc6"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>



                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="RC Book"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_weight="1">


                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc7"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>



                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Driving License"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_weight="1.5">



                        <RelativeLayout
                            android:layout_width="90dp"
                            android:layout_marginTop="8dp"
                            android:layout_height="90dp">

                            <ImageView
                                android:id="@+id/doc5"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/add_image"/>



                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            android:gravity="center"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Insurance"/>

                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:layout_marginEnd="16dp"
                    android:orientation="horizontal"
                    android:gravity="right">

                    <TextView
                        android:id="@+id/previous1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="32dp"
